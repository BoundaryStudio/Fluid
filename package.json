{
  "name": "fluid",
  "version": "0.2.0",
  "version_short": "0.2",
  "homepage": "https://fluid-framework/fluid",
  "author": {
    "name": "Ashfahan",
    "email": "me@ashfahan.com",
    "url": "https://ashfahan.com"
  },
  "maintainers": [
    "Ashfahan"
  ],
  "description": "Modern, Stylish, Easier and Powerful front-end framework for faster web development.",
  "style": "dist/fluid.css",
  "scss": "src/fluid.scss",
  "main": "dist/fluid.css",
  "keywords": [
    "css",
    "scss",
    "mobile-first",
    "mobile-ready",
    "responsive",
    "front-end",
    "web",
    "framework",
    "flexbox"
  ],
  "contributors": [
    "fluid-framework"
  ],
  "bugs": {
    "url": "https://github.com/fluid-framework/fluid/issues/"
  },
  "scripts": {
    "start": "yarn run watch",
    "watch": "node-sass ./src --output ./dist/ --output-style compact --indent-type space --indent-width 2 --source-map true -w",
    "lint": "yarn run build:lint",
    "test": "yarn run build:lint",
    "deploy": "yarn run build",
    "build": "npm-run-all -s build:*",
    "build:lint": "stylelint src/**/*.scss --fix",
    "build:clean": "rimraf dist",
    "build:compile": "node-sass ./src --output ./dist/ --output-style expanded --indent-type space --indent-width 2 --source-map true",
    "build:prefix": "postcss ./dist/*.css --dir ./dist --use autoprefixer --map false",
    "build:minify": "foreach -g ./dist/*.css -i ./dist/*.min.css -x \"node-sass ./dist/#{name}.css ./dist/#{name}.min.css --output-style compressed --source-map true\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fluid-framework/Fluid.git"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "foreach-cli": "^1.8.1",
    "autoprefixer": "^9.6.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "rimraf": "^2.6.3",
    "stylelint": "^10.1.0",
    "stylelint-scss": "^3.8.0",
    "stylelint-order": "^3.0.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-config-recommended-scss": "^3.3.0"
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "dist/{css,js}",
    "src/{scss}"
  ]
}
